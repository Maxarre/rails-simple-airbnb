<p><%= link_to "Back to list", flats_path %></p>

<div class="row">
  <div class="col-8">
    <div class="flat-show-card">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="flat-show-card">
      <h3>A bit more about this flat</h3>
      <p><%= @flat.description %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="flat-show-card">
      <h5>Book this place</h5>
    </div>
    <div class="flat-show-card">
      <h3>Details</h3>
      <p><i class="fas fa-users"></i> <%= @flat.number_of_guests %></p>
      <p><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
    </div>
        <div class="flat-show-card">
      <h5>Share</h5>
      <ul class="list-inline">
        <li><i class="fab fa-twitter"></i></li>
        <li><i class="fab fa-facebook-f"></i></li>
        <li><i class="far fa-envelope"></i></li>
      </ul>
    </div>
  </div>
</div>
